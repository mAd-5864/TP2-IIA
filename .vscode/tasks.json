{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "gcc",
            "args": [
            "-g",
            "main.c",
            "utils.c",
            "trepaColinas.c",
            "-o",
            "${fileDirname}\\${fileBasenameNoExtension}"
